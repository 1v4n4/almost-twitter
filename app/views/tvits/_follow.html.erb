<div class="card col-3" style="width: 20rem;">
<h3 class=" m-3">Who to follow</h3>
<% @users.each do |user| %>
    <div class="col-3 border-top-3 border-info" style="width: 20 rem;">
      <div  style="width: 20rem;">
        <div class="column g-0 d-flex">
          <div class=" float-start">
            <img src="https://i.pinimg.com/originals/9f/7f/87/9f7f876e7fbd24a6cf76e51b8c1109f5.jpg" class="round-img-sm m-3" alt="tvit-img">
          </div>
          <div class="col-md-8 ms-2">
            <div class="card-body">
              <h5 class="card-title"><%= user.name %></h5> 
              <p class="card-text"><small class="text-muted"><%= user.username %></small></p>
              <%= link_to friendships_path, {:controller => "friendships", :action => "create", :friend_id => user.id, :user_id=> current_user} , :method=>:post do %> 
                <span class="icon mx-3"><i class="fa fa-user-plus" aria-hidden="true"></i></span> 
              <% end %>           
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

